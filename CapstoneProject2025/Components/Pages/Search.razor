@page "/Search"
@using CapstoneProject2025.Models
@using CapstoneProject2025.Services
@inject IProductService ProductService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="container">
    <h2>Search Products</h2>

    <div class="search-bar">
        <input type="text"
               placeholder="Search by name or category..."
               @bind="SearchQuery"
               @bind:event="oninput" />
    </div>

    <div class="sort-bar">
        <select @onchange="OnSortChanged">
            <option value="">Sort By...</option>
            <option value="NameAZ">Name (A-Z)</option>
            <option value="NameZA">Name (Z-A)</option>
            <option value="CategoryAZ">Category (A-Z)</option>
            <option value="CategoryZA">Category (Z-A)</option>
            <option value="ExpirationStatus">Expiration Status</option>
        </select>
    </div>

    <div class="grid">
        @if (filteredProducts.Any())
        {
            @foreach (var product in filteredProducts)
            {
                <div class="grid-item @GetHighlightClass(product)">
                    <h3>@product.Name</h3>
                    <p>Category: @product.Category</p>
                    <p>@(product.DateType == DateType.Expiration ? "Expires: " : "Best before: ") @GetRelativeFutureDate(product.ExpDate)</p>
                </div>
            }
        }
        else
        {
            <p>No products found.</p>
        }
    </div>
</div>

@code {
    private string searchQuery = string.Empty;
    private List<Product> products = new();
    private List<Product> filteredProducts = new();

    // Property bound to the input field, triggers live search
    private string SearchQuery
    {
        get => searchQuery;
        set
        {
            searchQuery = value;
            FilterProducts();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await ProductService.InitializeAsync();
        products = await ProductService.GetProductsAsync();
        filteredProducts = products.ToList();
    }

    private void FilterProducts()
    {
        if (string.IsNullOrWhiteSpace(SearchQuery))
        {
            filteredProducts = products.ToList();
        }
        else
        {
            var query = SearchQuery.Trim().ToLower();
            filteredProducts = products
                .Where(p => p.Name.ToLower().Contains(query) ||
                            p.Category.ToLower().Contains(query))
                .ToList();
        }
    }

    private async Task OnSortChanged(ChangeEventArgs e)
    {
        var sortOption = e.Value?.ToString();

        switch (sortOption)
        {
            case "NameAZ":
                filteredProducts = filteredProducts.OrderBy(p => p.Name).ToList();
                break;
            case "NameZA":
                filteredProducts = filteredProducts.OrderByDescending(p => p.Name).ToList();
                break;
            case "CategoryAZ":
                filteredProducts = filteredProducts.OrderBy(p => p.Category).ToList();
                break;
            case "CategoryZA":
                filteredProducts = filteredProducts.OrderByDescending(p => p.Category).ToList();
                break;
            case "ExpirationStatus":
                filteredProducts = filteredProducts.OrderBy(p => GetStatusOrder(p.GetExpirationStatus())).ToList();
                break;
        }

        StateHasChanged();
    }

    private int GetStatusOrder(string status)
    {
        return status switch
        {
            "Expired" => 1,
            "Bad" => 2,
            "Expiring Soon" => 3,
            "Going Bad" => 4,
            _ => 5
        };
    }

    private string GetRelativeFutureDate(DateTime date)
    {
        var diff = date - DateTime.Now;

        if (diff.TotalDays < 1)
        {
            if (diff.TotalHours < 1) return $"in {Math.Max((int)diff.TotalMinutes, 1)} minutes";
            return $"in {Math.Max((int)diff.TotalHours, 1)} hours";
        }
        if (diff.TotalDays < 30) return $"in {Math.Max((int)diff.TotalDays, 1)} days";
        if (diff.TotalDays < 365) return $"in {Math.Max((int)(diff.TotalDays / 30), 1)} months";
        return $"in {Math.Max((int)(diff.TotalDays / 365), 1)} years";
    }

    private string GetHighlightClass(Product p)
    {
        var status = p.GetExpirationStatus();
        return status switch
        {
            "Bad" => "bad-item",
            "Going Bad" => "goingbad-item",
            "Expired" => "expired-item",
            "Expiring Soon" => "expiring-item",
            _ => ""
        };
    }
}
